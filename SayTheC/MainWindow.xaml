<Window x:Class="SayTheC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SayTheC"
        xmlns:conv="clr-namespace:Converters"
        mc:Ignorable="d"
        Title="Say the C" Height="450" Width="800" Icon="\Icons\favicon.ico">
    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="CButton" TargetType="Button">
            <Setter Property="Background" Value="#FF5A9BD5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="10" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2A5F91"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFC0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Button Name="generateButton" Content="Generate word!"
            Command="{Binding GenerateWordCommand}"
            HorizontalAlignment="Left"
            FontSize="30"
            Height="81"
            Margin="51,288,0,0"
            VerticalAlignment="Top"
            Width="310"           
            Style="{StaticResource CButton}" />

        <Button Name="playButton" Content=""
            Command="{Binding PlaySoundCommand}"
            HorizontalAlignment="Left"
            Height="81"
            Margin="400,288,0,0"
            VerticalAlignment="Top"
            Width="118">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource CButton}">
                    <Setter Property="Background" Value="#FFB14040"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF953434"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF712828"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>        

        <Image x:Name="playIcon"
           HorizontalAlignment="Left"
           Height="50"
           Margin="434,304,0,0"
           VerticalAlignment="Top"
           Width="50"
           Source="Icons\Sound.png"/>

        <Button x:Name="helpButton" Content=""
            Command="{Binding ShowHelpCommand}"
            HorizontalAlignment="Left"
            Height="80"
            Margin="633,288,0,0"
            VerticalAlignment="Top"
            Width="118">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource CButton}">
                    <Setter Property="Background" Value="#FF80C3DA"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF5EB4D1"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF4496B0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Image x:Name="helpIcon"
           HorizontalAlignment="Left"
           Height="50"
           Margin="669,304,0,0"
           VerticalAlignment="Top"
           Width="50"
           Source="/Icons/Instructions.png"/>

        <TextBlock x:Name="WordTextBlock"
           FontSize="80"
           Width="450"
           Height="160"
           Margin="92,73,0,0"
           VerticalAlignment="Top"
           HorizontalAlignment="Left"
           IsHitTestVisible="False"/>

        <Image Width="188"
               Height="160"
               Margin="558,73,0,0"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Source="{Binding WordImage}" />

        <Grid
          Visibility="{Binding IsHelpVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
          Height="400"
          Width="750">            
            <Grid.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding HideHelpCommand}" />
            </Grid.InputBindings>                    
            <Rectangle HorizontalAlignment="Center"
                   Height="400"
                   Stroke="Black"
                   VerticalAlignment="Center"
                   Width="750"
                   Fill="#FFCBE8EF"/>
            <TextBlock HorizontalAlignment="Center"
                   Height="278"
                   TextWrapping="Wrap"
                   FontSize="26"
                   Text="This game is designed to help pupils understand the ways to pronounce the letter C.&#x0a;&#x0a;Press the word generator to show different words which include the letter C; click on the sound to hear their pronunciation and see if you are correct!&#x0a;&#x0a;Click on the window to close it."
                   VerticalAlignment="Top"
                   Width="708"
                   TextAlignment="Justify"
                   Margin="0,105,0,0"/>
            <Label Content="Hello!"
               HorizontalAlignment="Center"
               Height="76"
               Margin="0,24,0,0"
               VerticalAlignment="Top"
               Width="158"
               FontSize="55"/>
        </Grid>
    </Grid>
</Window>
